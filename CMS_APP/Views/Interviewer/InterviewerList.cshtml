	<script>

		function clearModalForCreate() {
			// Clear the input field values
			$("#firstName").val('');
			$("#lastName").val('');
			$("#email").val('');
			$("#password").val('');
			$("#designation").val('');
			$("#technology").val('');
			$("#experience").val('');
			$("#InterviewsConducted").val('');

			// Clear the error messages
			$('#firstNameError').text('');
			$('#lastNameError').text('');
			$('#emailError').text('');
			$('#passwordError').text('');
			$('#designationError').text('');
			$('#technologyError').text('');
			$('#experienceError').text('');
			$('#InterviewsConductedError').text('');
		}

		function clearModal(id) {

            //For update to get the previous values
			$("#firstName_" + id).val($("#previousfirstName_" + id).val());
            $("#lastName_" + id).val($("#previouslastName_" + id).val());
			$("#email_" + id).val($("#previousemail_" + id).val());
			$("#password_" + id).val($("#previouspassword_" + id).val());
			$("#designation_" + id).val($("#previousdesignation_" + id).val());
			$("#technology_" + id).val($("#previoustechnology_" + id).val());
            $("#experience_" + id).val($("#previousexperience_" + id).val());
			$("#InterviewsConducted_" + id).val($("#previousInterviewsConducted_" + id).val());

            // Clear the error messages
			$('#firstNameError_' + id).text('');
			$('#lastNameError_' + id).text('');
			$('#emailError_' + id).text('');
			$('#passwordError_' + id).text('');
			$('#designationError_' + id).text('');
			$('#technologyError_' + id).text('');
			$('#experienceError_' + id).text('');
			$('#InterviewsConductedError_' + id).text('');
        }

		function togglePassword() {
		  const passwordInput = document.getElementById("password");
		  const icon = document.querySelector("#passwordToggleIcon");

		  if (passwordInput.type === "password") {
			passwordInput.type = "text";
			icon.classList.remove("fa-eye-slash");
			icon.classList.add("fa-eye");
		  } else {
			passwordInput.type = "password";
			icon.classList.remove("fa-eye");
			icon.classList.add("fa-eye-slash");
		  }
		}
	
		function togglePasswordVisibility(inputElement, iconElement) {
			if (inputElement.type === "password") {
				inputElement.type = "text";
				iconElement.classList.remove("fa-eye-slash");
				iconElement.classList.add("fa-eye");
			} else {
				inputElement.type = "password";
				iconElement.classList.remove("fa-eye");
				iconElement.classList.add("fa-eye-slash");
			}
		}

		$('#save-btn').click(function () {
				
			// Get the values of the input fields
			var firstName = $('#firstName').val();
			var lastName = $('#lastName').val();
			var email = $('#email').val();
			var password = $('#password').val();
			var designation = $('#designation').val();
			var technology = $('#technology').val();
			var experience = $('#experience').val();
			var interviewsConducted = $('#InterviewsConducted').val();

			$('#firstName').on('input', function () {
				// Clear the error message when the field is not empty
				if ($(this).val() !== '') {
					$('#firstNameError').text('');
				}
			});
			$('#lastName').on('input', function () {
				// Clear the error message when the field is not empty
				if ($(this).val() !== '') {
					$('#lastNameError').text('');
				}
			});
			$('#email').on('input', function () {
				// Clear the error message when the field is not empty
				if ($(this).val() !== '') {
					$('#emailError').text('');
				}
			});
			$('#password').on('input', function () {
				// Clear the error message when the field is not empty
				if ($(this).val() !== '') {
					$('#passwordError').text('');
				}
			});
			$('#designation').on('input', function () {
				// Clear the error message when the field is not empty
				if ($(this).val() !== '') {
					$('#designationError').text('');
				}
			});
			$('#technology').on('input', function () {
				// Clear the error message when the field is not empty
				if ($(this).val() !== '') {
					$('#technologyError').text('');
				}
			});
			$('#experience').on('input', function () {
				// Clear the error message when the field is not empty
				if ($(this).val() !== '') {
					$('#experienceError').text('');
				}
			});
			$('#InterviewsConducted').on('input', function () {
				// Clear the error message when the field is not empty
				if ($(this).val() !== '') {
					$('#InterviewsConductedError').text('');
				}
			});

			// Validate the input fields
		
			if (firstName.trim() === '' || !/^[a-zA-Z]{2,}$/.test(firstName)) {
			$('#firstNameError').text('Valid first name (Min 2 characters, no spaces, or special characters).');
				return;
			}
			if (lastName.trim() === '' || !/^[a-zA-Z]{2,}$/.test(lastName)) {
				$('#lastNameError').text('Valid last name (Min 2 characters, no spaces, or special characters).');
				return;
			}
